{
  "builds": [
    {
      "src": "server/node-build.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/server/**"],
        "runtime": "nodejs20.x"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/spa"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/node-build.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/spa/$1"
    }
  ]
}